contract UniqueOneUniswap is ERC721Holder, ERC1155Holder {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;
    
    IUniswapRouter02 private constant uniswapRouter = IUniswapRouter02(
        0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D
    );
    
    // rinkeby weth address
    address
        private constant wethTokenAddress = 0xc778417E063141139Fce010982780140Aa0cD5Ab;
    
    IERC721Sale public erc721Sale;
    IERC1155Sale public erc1155Sale;
    
    uint private constant maxBuyerFeePercentage = 10000;
    
    constructor(IERC721Sale _erc721Sale, IERC1155Sale _erc1155Sale) public {
        erc721Sale = _erc721Sale;
        erc1155Sale = _erc1155Sale;
    }
    
    function buyERC721NFT(
        address fromToken,
        uint256 maxFromAmount,
        IERC721 nft, 
        uint256 tokenId, 
        uint256 price, 
        uint256 sellerFee,
        IERC721Sale.Sig calldata signature
    ) external {
        uint256 buyerFeeValue = erc721Sale.buyerFee().mul(price).div(maxBuyerFeePercentage);
        uint256 ETHToPay = price.add(buyerFeeValue);
        
       _swapToETH(
            fromToken,
            maxFromAmount,
            ETHToPay
        );
        
        // buy NFT
        erc721Sale.buy.value(ETHToPay)(
            nft,
            tokenId,
            price,
            sellerFee,
            signature
        );
        
        // transfer NFT to user
        nft.transferFrom(
            address(this),
            msg.sender,
            tokenId
        );
    }
    
    function buyERC1155NFT(
        address fromToken,
        uint256 maxFromAmount,
        IERC1155 nft, 
        uint256 tokenId,
        address payable owner,
        uint256 selling,
        uint256 buying,
        uint256 price, 
        uint256 sellerFee,
        IERC1155Sale.Sig calldata signature
    ) external {
        uint256 buyerFeeValuePerNFT = erc1155Sale.buyerFee().mul(price).div(maxBuyerFeePercentage);
        uint256 ETHToPay = price.add(buyerFeeValuePerNFT).mul(buying);
        
        _swapToETH(
            fromToken,
            maxFromAmount,
            ETHToPay
        );
        
        // buy NFT
        erc1155Sale.buy.value(ETHToPay)(
            nft,
            tokenId,
            owner,
            selling,
            buying,
            price,
            sellerFee,
            signature
        );
        
        // transfer NFT to user
        nft.safeTransferFrom(
            address(this), 
            msg.sender, 
            tokenId, 
            buying,
            ""
        );
    }
    
    function _swapToETH(
        address fromToken,
        uint256 maxFromAmount,
        uint256 ETHToPay
    ) internal {
        // calculate fromTokens required for swap
        uint256 fromTokenAmount;
        address[] memory path = new address[](2);
        if(fromToken == wethTokenAddress) {
            fromTokenAmount = ETHToPay;
        } else {
            path[0] = fromToken;
            path[1] = wethTokenAddress;
            fromTokenAmount = uniswapRouter.getAmountsIn(
                ETHToPay,
                path
            )[0];
        }
        require(fromTokenAmount <= maxFromAmount, "Slippage Check failed");
        
        // pull fromTokens from user
        IERC20(fromToken).safeTransferFrom(
            msg.sender,
            address(this),
            fromTokenAmount
        );
        
        // convert to ETH
        if (fromToken == wethTokenAddress) {
            IWETH(wethTokenAddress).withdraw(fromTokenAmount);
        } else {
            IERC20(fromToken).safeApprove(
                address(uniswapRouter),
                fromTokenAmount
            );
            uniswapRouter.swapTokensForExactETH(
                ETHToPay,
                fromTokenAmount,
                path,
                address(this),
                now
            );
        }
    }
    
    // receive ETH
    function() external payable {
        require(msg.sender != tx.origin, "Do not send ETH directly");
    }
}